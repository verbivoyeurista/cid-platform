{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "cid://taxonomy",
  "title": "CID Taxonomy Schema",
  "description": "Defines the allowed classification and structure for CID keys.",
  "type": "object",
  "properties": {
    "components": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "variants": { "type": "array", "items": { "type": "string" } },
          "intents": { "type": "array", "items": { "type": "string" } }
        }
      }
    },
    "contexts": {
      "type": "array",
      "items": { "type": "string" }
    },
    "locales": {
      "type": "array",
      "items": { "type": "string" }
    }
  }
}
